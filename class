class Student(object):
    
    def __init__(self):
        print('初始化对象',self)
        
student = Student()


class Student(object):
    
    def __init__(self,name,age):
        self.name = name
        self.age = age
        self.Math_score = 100
        self.Chinese_score = 100
        self.English_score = 100
        
    def study(self):
        print(f'{self.name}正在学习ing')  
        
    def play(self):
        print(f'{self.name}正在玩耍ing') 
    

student = Student('小秦',6)

student.history_score = 90
print(f'{student.name}今年{student.age}岁，学习成绩是',student.Math_score,student.Chinese_score,student.English_score,student.history_score)

student2 = Student('小赵',12)
print(f'{student2.name}今年{student2.age}岁，学习成绩是',student2.Math_score,student2.Chinese_score,student2.English_score)

student3 = Student('小周',15)
print(f'{student3.name}今年{student3.age}岁，学习成绩是',student2.Math_score,student2.Chinese_score,student2.English_score)
